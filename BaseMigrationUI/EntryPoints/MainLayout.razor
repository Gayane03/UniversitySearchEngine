@inherits LayoutComponentBase
@inject NavigationManager Navigation

<style>

	.layout-container {
		display: flex;
		height: 100vh;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern font */
	}



	.sidebar {
		background-color: #343a40; /* This is the line you want to adjust */
		color: #e9ecef;
		
		box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
		width: 240px;
	}



		.sidebar h2 {
			margin-bottom: 20px;
			color: #007bff; /* Primary color for emphasis */

			font-weight: 600;
		}



	.content {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		padding-top: 0;
	}



	.header {
		margin-top: 0; /* Remove top margin for cleaner look */

		display: flex;
		justify-content: center;
		align-items: center;
		height: 15vh; /* Reduce header height */

		background: linear-gradient(135deg, #644b4b, #6610f2); /* Gradient background */

		color: white;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* Add text shadow */
	}



		.header h1 {
			font-size: 2.5em; /* Larger header text */

			font-weight: 700;
			letter-spacing: 1px;
		}



	.footer {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 5vh; /* Adjust footer height */

		background-color: #6e5882; /* Match sidebar background */

		color: #e9ecef;
		font-size: 0.9em;
	}



	.content-body {
		flex-grow: 1;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 20px;
		background-color: #f8f9fa; /* Light background for content */
	}



	.mud-card {
		width: 80%; /* Adjust card width */

		max-width: 1200px; /* Max width for large screens */

		padding: 30px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */

		border-radius: 8px; /* Rounded corners */
	}



	.mud-card-content {
		width: 100%;
	}



	.sidebar .nav-link {
		display: block;
		padding: 10px 15px;
		color: #212529;
		text-decoration: none;
		border-radius: 5px;
		transition: background-color 0.3s ease;
	}



		.sidebar .nav-link:hover {
			background-color: rgba(255, 255, 255, 0.1);
		}



		.sidebar .nav-link.active {
			background-color: #c4acda;
			color: #001225;
		}

</style>


<div class="layout-container">
	<div class="sidebar">
		<NuvMenu />
	</div>

	<div class="content">
		<header>
			<div class="header">
				<h1>University Search Engine</h1>
			</div>
		</header>

		<div class="content-body">
			<MudCard Elevation="2" Class="mud-card">
				<MudCardContent Class="mud-card-content">
					@Body
				</MudCardContent>
			</MudCard>
		</div>

		<div class="footer">
			<footer>
				<p style="margin: 0">© @DateTime.Now.Year</p>
			</footer>
		</div>
	</div>
</div>